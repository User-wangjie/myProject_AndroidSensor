<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.chen.capton.purepuzzle.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"/>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg2"/>
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg3"/>

    <Button
        android:text="设置"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="#DA293B44"
        android:layout_below="@+id/recordBtn"
        android:layout_alignStart="@+id/recordBtn"
        android:layout_marginTop="10dp"
        android:id="@+id/settings" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:background="#DA293B44"
        android:layout_below="@+id/settings"
        android:layout_alignEnd="@+id/settings"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/aboutGameBtn"
        android:text="关于" />

    <Button
        android:text="开始"
        android:layout_width="150dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="#DA293B44"
        android:id="@+id/startGame"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:background="#DA293B44"
        android:id="@+id/recordBtn"
        android:text="排行"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/startGame"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
